<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/target</directory>
      <includes>
	<include>${project.artifactId}-${project.version}*.jar</include>
      </includes>
     <outputDirectory>/target</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/samples</directory>
      <includes>
	<include>*</include>
      </includes>
     <outputDirectory>/samples</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
	<include>pldoc.bat</include>
	<include>pldoc.sh</include>
	<include>pldoc_example.bat</include>
	<include>pldoc_example.sh</include>
	<include>pldoc_ant_example.bat</include>
	<include>pldoc_ant_example.sh</include>
	<include>ant_example.xml</include>
	<include>ant_enterprise_example.xml</include>
	<include>pldoc_drop.bat</include>
      </includes>
     <fileMode>0755</fileMode> 
     <outputDirectory>/</outputDirectory> 
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/command/ant</directory>
      <includes>
	<include>ant_enterprise_example.properties</include>
	<include>ant_oracle_example.properties</include>
	<include>ant_oracle_example.xml</include>
      </includes>
     <fileMode>0755</fileMode> 
     <outputDirectory>/</outputDirectory> 
    </fileSet>
  </fileSets>
</assembly>
