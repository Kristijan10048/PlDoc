                <role>Software Developer</role>
            </roles>
        </developer>
        <developer>
            <name>Christophe Grosjean</name>
            <id>toche_</id>
            <email>toche_ at users.sourceforge.net</email>
            <roles>
                <role>Software Developer</role>
            </roles>
        </developer>
        <developer>
            <name>Zoltan Farkas</name>
            <id>zolyfarkas</id>
